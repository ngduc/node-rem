{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./built",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "commonjs"
  },
  "include": [
    "./tests/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "api/*": ["api/*"],
    "config/*": ["config/*"]
  }
}
